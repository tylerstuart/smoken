<% provide(:title, "Edit user") %> 
<h1>Update your Recipe</h1>

  <%= form_for(@recipe, :html => {:multipart => true}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

    <div class="field">
      <%= f.label :recipe_name, "Recipe Name" %>:</br>
      <%= f.text_field :recipe_name %>
    </div>
    <div class="field">
      <%= f.label :description %>:</br>
      <%= f.text_area :description %>
    </div>
    <div class="field">  
      <%= f.label :ingredients %>:</br>
      <%= f.text_area :ingredients %>
    </div>
    <div class="field">
      <%= f.label :directions %>:</br>
      <%= f.text_area :directions %>
    </div>
    <div class="field">
      <%= f.label :prep_time, "Preperation Time" %>:</br>
      <%= f.text_field :prep_time %>
    </div>
    <div class="field">
      <%= f.label :cook_time, "Cook Time" %>:</br>
      <%= f.text_field :cook_time %>
    </div>
    <div class="field">
      <%= f.label :image, "Upload an Image" %>:</br>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit "Edit recipe", class: "btn btn-large btn-primary" %>
    </div>



  <% end %>
