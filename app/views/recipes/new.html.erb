<%= provide(:title, 'Sign up') %>
<h1>New Recipe</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@recipe) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :recipe_name %>
      <%= f.text_field :recipe_name %>

      <%= f.label :description %>
      <%= f.text_field :description %>
      
      <%= f.label :ingredients %>
      <%= f.text_field :ingredients %>

      <%= f.label :directions %>
      <%= f.text_field :directions %>

      <%= f.label :prep_time %>
      <%= f.text_field :prep_time %>

      <%= f.label :cook_time %>
      <%= f.text_field :cook_time %>

      <%= f.submit "Create recipe", class: "btn btn-large btn-primary" %>

  <% end %>
  </div>
</div>