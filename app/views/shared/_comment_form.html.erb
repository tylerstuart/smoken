<% if signed_in? %>	
	<%= form_for [@recipe, current_user.comments.new] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	  <div class="field">
	  	<%= f.text_area :content, placeholder: "Create new comment..." %>
	  </div>
	  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
	<% end %>
<% else %>
  <div>
  	To post a comment Please <%= link_to "Sign in", signin_path %>.
  </div>
<% end %>

